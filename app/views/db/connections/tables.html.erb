<h4>Tables of <b><%= @db_connection.database %></b> database</h4>

<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th>Schema</th>
      <th>Name</th>
      <th>Records</th>
      <th>Size</th>
    </tr>
  </thead>

  <tbody>
    <% @db_connection.schemas.each do |schema| %>
      <% schema.tables.each do |table| %>
        <tr>
          <td><%= schema.name %></td>
          <td><%= table.name %></td>
          <td></td>
          <td></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
