<%= form_for(db_query) do |f| %>
  <% if db_query.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(db_query.errors.count, "error") %> prohibited this db_query from being saved:</h2>

      <ul>
      <% db_query.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div class="field">
    <%= f.label :body %>
    <%= f.text_area :body %>
  </div>

  <div class="field">
    <%= f.label :db_connection_id %>
    <%= f.select :db_connection_id, Db::Connection.all.map { |c| ["#{c.adapter}: #{c.database}", c.id] } %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
