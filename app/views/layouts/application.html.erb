<!DOCTYPE html>
<html>
  <head>
    <title>SqlBro</title>
    <%= csrf_meta_tags %>

    <%= javascript_include_tag "application" %>

    <%= stylesheet_link_tag "application", media: "all" %>

    <script type="text/javascript">
      var Routes = {
        query_path: function(query_id, format) {
          var path = "/db/queries/" + query_id;
          if(format) {
            path += "." + format;
          }

          return path;
        }
      };
    </script>
  </head>

  <body>
    <%= render "layouts/header" %>

    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
